		--
		VERSION = 0
		VERSION_UPGRADE_0
	}
	--
	while VERSION_NOW > VERSION {
		VERSION++
		void EVAL('VERSION_UPGRADE_'+VERSION)
	}
	--
	if VERSION_UPGRADE.NeedRec{
		ERASEVAR('VERSION_UPGRADE.NeedRec')
		OnRecoveryUpdate.Silent
	}
}

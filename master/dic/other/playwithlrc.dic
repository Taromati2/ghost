	_lrcenable = ('OFF',' ON')[musiclrcenable]
	_name = SPLITPATH(musicfile[2])
	if musicplayinfo {
		_name=IARRAY
		_name[2]=musicplayinfo
		musicplayinfo=NULL
	}
	if !_name
		_name=',无文件'
	'\C\![lock,balloonrepaint]\1\c\![quicksession,true]'
	if !infomode
		'\![set,choicetimeout,0]'
	'\![set,autoscroll,false]\c\s[12]\f[bold,1]Mini音乐播放器\f[bold,default]\_l[145]\q[◇打开路径,OnMusicPathOpen]\_l[215]\q[◇关闭,OnMusicPlayerClose]\n'
	_name[2]

	'\s[10]\0'
	if musicplayerlist
		_txt+=OnMusicPlayerList
	'\![unlock,balloonrepaint]'
	if reference0 != 'NoSurfaceRestore'
		'\_w[1000]\![raise,OnSurfaceRestore.Music.Played]'
}
